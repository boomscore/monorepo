{
  "name": "@boomscore/backend",
  "version": "1.0.0",
  "description": "  sports prediction platform backend API",
  "private": true,
  "license": "MIT",
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "start:worker": "nest start --watch --exec \"node dist/worker.js\"",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "migration:generate": "npm run build && typeorm migration:generate -d dist/migration.config.js",
    "migration:run": "npm run build && typeorm migration:run -d dist/migration.config.js",
    "migration:revert": "npm run build && typeorm migration:revert -d dist/migration.config.js",
    "seed:run": "ts-node -r tsconfig-paths/register src/database/seeds/run-seeds.ts",
    "clean": "rm -rf dist node_modules"
  },
  "dependencies": {
    "@apollo/server": "^4.12.2",
    "@apollo/server-plugin-landing-page-graphql-playground": "^4.0.1",
    "@nestjs/apollo": "^12.2.2",
    "@nestjs/axios": "^3.1.3",
    "@nestjs/bullmq": "^10.2.3",
    "@nestjs/common": "^10.4.20",
    "@nestjs/config": "^3.3.0",
    "@nestjs/core": "^10.4.20",
    "@nestjs/graphql": "^12.2.2",
    "@nestjs/jwt": "^10.2.0",
    "@nestjs/passport": "^10.0.3",
    "@nestjs/platform-express": "^10.4.20",
    "@nestjs/schedule": "^4.1.2",
    "@nestjs/swagger": "^7.4.2",
    "@nestjs/throttler": "^5.2.0",
    "@nestjs/typeorm": "^10.0.2",
    "@opentelemetry/api": "^1.9.0",
    "@opentelemetry/auto-instrumentations-node": "^0.46.1",
    "@opentelemetry/sdk-node": "^0.51.1",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/passport-google-oauth20": "^2.0.16",
    "apollo-server-express": "^3.13.0",
    "axios": "^1.12.2",
    "bcrypt": "6.0.0",
    "bullmq": "^5.59.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "compression": "^1.8.1",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "express": "^4.21.2",
    "express-graphql": "^0.12.0",
    "express-rate-limit": "^7.5.1",
    "graphiql": "^5.2.0",
    "graphql": "^16.11.0",
    "graphql-playground-middleware-express": "^1.7.23",
    "graphql-type-json": "^0.3.2",
    "helmet": "^7.2.0",
    "ioredis": "^5.8.0",
    "joi": "^17.13.3",
    "jsonwebtoken": "^9.0.2",
    "nestjs-pino": "^4.4.1",
    "node-cron": "^3.0.3",
    "openai": "^4.104.0",
    "passport": "^0.7.0",
    "passport-google-oauth20": "^2.0.0",
    "passport-jwt": "^4.0.1",
    "passport-local": "^1.0.0",
    "pg": "^8.16.3",
    "pino": "^9.12.0",
    "pino-http": "^10.5.0",
    "pino-pretty": "^11.3.0",
    "prom-client": "^15.1.3",
    "reflect-metadata": "^0.2.2",
    "resend": "^3.5.0",
    "rxjs": "^7.8.2",
    "typeorm": "^0.3.27",
    "uuid": "^10.0.0"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.4.9",
    "@nestjs/schematics": "^10.2.3",
    "@nestjs/testing": "^10.4.20",
    "@types/bcrypt": "^5.0.2",
    "@types/compression": "^1.8.1",
    "@types/cookie-parser": "^1.4.9",
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.23",
    "@types/jest": "^29.5.14",
    "@types/node": "^20.19.19",
    "@types/node-cron": "^3.0.11",
    "@types/passport-jwt": "^4.0.1",
    "@types/passport-local": "^1.0.38",
    "@types/pg": "^8.15.5",
    "@types/supertest": "^6.0.3",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.1.2",
    "eslint-plugin-prettier": "^5.5.4",
    "jest": "^29.7.0",
    "prettier": "^3.6.2",
    "source-map-support": "^0.5.21",
    "supertest": "^7.1.4",
    "testcontainers": "^10.28.0",
    "ts-jest": "^29.4.4",
    "ts-loader": "^9.5.4",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.9.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s",
      "!**/*.d.ts",
      "!**/node_modules/**",
      "!**/*.spec.ts",
      "!**/*.e2e-spec.ts"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node",
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  }
}
